package com.example.demo.controller;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.HttpMethod;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@RestController
@RequestMapping("/v1/service1")
public class Service1Controller {
	RestTemplate restTemplate = new RestTemplate();
	private static final Logger LOG = LoggerFactory.getLogger(Service1Controller.class);
	
	@GetMapping("/test")
	public String test() {
		LOG.info("you called service 1");
		restTemplate.getForEntity("http://localhost:8082/v1/service2/test", String.class, "asd");
		return "service-1";
	}

}
